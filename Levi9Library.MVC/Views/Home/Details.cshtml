@using Levi9Library.MVC.Models
@model BookViewModel

@{
	ViewBag.Title = $"Details Book {Model.BookId}";
}

<h1>Details Book @Model.BookId</h1>

<div>
	<div>
		Title: @Model.Title
	</div>
	<div>
		Author: @Model.Author
	</div>
	<div>
		Book Score: @Model.BookScore
	</div>
	<div>
		Stock: @Model.Stock
	</div>
</div>

<div>
	@Html.ActionLink("Back to book list", "Manage")
</div>