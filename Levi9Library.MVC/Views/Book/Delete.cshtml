@using Levi9Library.MVC.Models
@model BookViewModel

@{
	ViewBag.Title = "Delete";
}

<h3 class="h3-with-margin">Delete</h3>

<h4>Are you sure you want to delete this entry?</h4>

<fieldset>
	<legend>Book</legend>

	<div class="custom-label">
		Title:
		<span class="custom-field">@Html.DisplayFor(model => model.Title)</span>
	</div>

	<div class="custom-label">
		Author:
		<span class="custom-field">@Html.DisplayFor(model => model.Author)</span>
	</div>

	<div class="custom-label">
		Book Score:
		<span class="custom-field">@Html.DisplayFor(model => model.BookScore)</span>
	</div>
	
	<div class="custom-label">
		Stock:
		<span class="custom-field">@Html.DisplayFor(model => model.Stock)</span>
	</div>
	
	@using (Html.BeginForm()) {
		<p>
			<input type="submit" class="btn btn-default" value="Delete" />
			<input type="button" class="btn" value="Cancel" onclick="location.href='@Url.Action("Manage", "Book")'" />
		</p>
	}

</fieldset>